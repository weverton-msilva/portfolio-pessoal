{
  // Formata o código ao salvar o arquivo
  "editor.formatOnSave": true,

  // Define o Prettier como o formatador padrão para todos os tipos de arquivo
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Configurações específicas para o Prettier
  "prettier.tabWidth": 2, // Define a largura da tabulação para 2 espaços
  "prettier.useTabs": true, // Usa espaços em vez de tabs
  "prettier.singleQuote": true, // Usa aspas simples em vez de aspas duplas
  "prettier.jsxSingleQuote": true, // Usa aspas simples para JSX
  "prettier.trailingComma": "es5" // Adiciona vírgulas no final de objetos e arrays em JavaScript/JSON, etc.
}